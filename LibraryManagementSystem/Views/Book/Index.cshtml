@model IEnumerable<LibraryManagementSystem.Models.tblBook>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Books Detail</h2>

<p>
    <div class="btn btn-sm btn-primary" data-toggle='tooltip' title='Add book'>
        <i class="far fa-plus-square"></i>
        @Html.ActionLink("Add Book", "Create", null, new { @class = "", style = "text-decoration:none; color: white" })
    </div>

</p>
