@model LibraryManagementSystem.Models.tblAdmin

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fontawesome-all.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    @*@using (Html.BeginForm("Validate", "Admin"))*@

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div >
            <br />
            <br />
            <br />
            <br />
            <br />
        
     
            <div class="col-md-4 offset-sm-4">
                <div class="card">
                    <h5 class="card-header text-center">Admin Login</h5>
                    <div class="card-body offset-sm-1">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <form class="container-fluid">
                            <div class="form-group">
                                @*@Html.LabelFor(model => model.AdminEmail, htmlAttributes: new { @class = "" })*@
                                <label for="adminemail">Email</label>
                                <div class="input-group">
                                    <span class="input-group-text rounded-0">
                                        <i class="fas fa-user"></i>
                                    </span>
                                    @Html.EditorFor(model => model.AdminEmail, new { htmlAttributes = new { @class = "form-control", @id="adminemail", placeholder = "Enter the email"  } })
                                </div>
                                @Html.ValidationMessageFor(model => model.AdminEmail, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @*@Html.LabelFor(model => model.AdminPass, htmlAttributes: new { @class = "" })*@
                                <label for="adminpassword">Email</label>
                                <div class="input-group">
                                    <span class="input-group-text rounded-0">
                                        <i class="fas fa-unlock"></i>
                                    </span>
                                    @Html.EditorFor(model => model.AdminPass, new { htmlAttributes = new { @class = "form-control ", @id="adminpassword", placeholder = "Enter the password", type = "password" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.AdminPass, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <p class="text-danger">@ViewBag.Message</p>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        <div class="col-10 offset-1">
                            <button type="submit" value="Login" class="btn btn-sm btn-block btn-success">
                                <i class="fas fa-sign-in-alt"></i>
                                Login
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>